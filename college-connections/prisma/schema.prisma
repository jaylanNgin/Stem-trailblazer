// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  college       String
  major         String
  track         String?
  location      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Extracurricular {
  id           String   @id @default(cuid())
  college      String
  majorTags    String   // JSON array of majors
  trackTags    String?  // JSON array of tracks
  name         String
  description  String
  signupLink   String?
  officialPage String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Opportunity {
  id              String   @id @default(cuid())
  majorTags       String   // JSON array of majors
  trackTags       String?  // JSON array of tracks
  area            String   // Location/area
  title           String
  description     String
  applicationLink String?
  organization    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Contact {
  id           String   @id @default(cuid())
  college      String
  majorTags    String   // JSON array of majors
  trackTags    String?  // JSON array of tracks
  name         String
  title        String
  department   String
  bio          String?
  contactInfo  String   // JSON object with email, office hours, etc.
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

